{
  "productName": "overlayed",
  "appId": "com.hacksore.overlayed",
  "directories": {
    "buildResources": "public"
  },
  "extends": null,
  "extraMetadata": {
    "main": "build/electron/main.js"
  },
  "files": [
    "build/**/*",
    "node_modules/**/*"
  ],
  "mac": {
    "target": ["zip"],
    "artifactName": "${productName}-${version}-${os}.${ext}",
    "icon": "build/img/icon-mac.icns"
  },
  "win": {
    "target": ["zip"],
    "artifactName": "${productName}-${version}-${os}.${ext}",
    "icon": "build/img/icon.png"
  },
  "linux": {
    "target": ["zip"],
    "artifactName": "${productName}-${version}-${os}.${ext}",
    "icon": "build/img/icon.png"
  }
}