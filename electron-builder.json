{
  "productName": "overlayed",
  "appId": "com.hacksore.overlayed",
  "directories": {
    "buildResources": "buildResources",
    "output": "dist"
  },
  "files": [
    "build/**/*",
    "node_modules/**/*"
  ],
  "mac": {
    "target": ["zip"],
    "artifactName": "${productName}-${version}-${os}.${ext}",
    "icon": "build/img/icon.icns"
  },
  "win": {
    "target": ["zip"],
    "artifactName": "${productName}-${version}-${os}.${ext}",
    "icon": "build/img/icon.png"
  },
  "linux": {
    "target": ["zip"],
    "artifactName": "${productName}-${version}-${os}.${ext}",
    "icon": "build/img/icon.png"
  },
  "dmg": {
    "title": "${productName}-${version}",
    "contents": [
      {
        "x": 100,
        "y": 160
      },
      {
        "x": 190,
        "y": 260,
        "type": "link",
        "path": "/Applications"
      }
    ]
  }
}